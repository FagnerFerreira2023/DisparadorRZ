# ==========================
# DisparadorRZ - Stack Vars
# ==========================

# Imagem da API
# Exemplo Docker Hub: docker.io/seu_usuario/disparadorrz:latest
# Exemplo GHCR: ghcr.io/seu-usuario/disparadorrz:latest
DISPARADOR_IMAGE=docker.io/seu_usuario/disparadorrz:latest

# Rede externa do Traefik/Orion (já existente no Swarm)
# Exemplos: Activa_Rede | orion_public | traefik-public
SWARM_PUBLIC_NETWORK=Activa_Rede

# Domínio público da aplicação
APP_DOMAIN=disparo.pizzbot.cloud

# Certresolver do Traefik
TRAEFIK_CERTRESOLVER=letsencryptresolver

# Porta interna da API
APP_PORT=8787
AUTH_FOLDER=auth

# Segurança
JWT_SECRET=troque_por_um_segredo_forte
JWT_REFRESH_SECRET=troque_por_um_refresh_segredo_forte

# Banco de dados
DB_NAME=rz_sender
DB_USER=rz_sender
DB_PASSWORD=troque_por_uma_senha_forte

# Opcional (deixe vazio para desativar)
API_KEY=

# SMTP / OTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app
SMTP_FROM=seu_email@gmail.com

OTP_EMAIL_ENABLED=true
OTP_WHATSAPP_ENABLED=true
OTP_SMS_ENABLED=false
OTP_CONFIRM_URL=https://disparo.pizzbot.cloud/login.html

# Contas padrão criadas/sincronizadas pelo seed
DEFAULT_SUPERADMIN_EMAIL=superadmin@pizzbot.cloud
DEFAULT_SUPERADMIN_PASSWORD=Mudar@123
DEFAULT_SUPERADMIN_WHATSAPP=5513981577934
DEFAULT_ADMIN_EMAIL=admin@pizzbot.cloud
DEFAULT_ADMIN_PASSWORD=Mudar@123

# Migração automática de conta superadmin legada
LEGACY_SUPERADMIN_EMAIL=admin@saas.local
